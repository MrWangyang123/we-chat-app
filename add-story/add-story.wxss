.add_story {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 15rpx;
  background: #fff;
}

.title {
  padding: 30rpx 0 5rpx 0;
  width: 100%;
  text-align: center;
  font-size: 1.5rem;
  font-weight: bold;
  border-bottom: 1px solid #efefef;
  text-overflow: wrap;
}

.contents {
  padding: 15rpx 0;
  width: 100%;
  font-size: 1rem;
  line-height: 1rem;
}

.create_time{
  width: 100%;
  text-align: right;
  font-size: 25rpx;
  color: #8a8a8a;
}

.save {
  width: 100%;
  font-size: 35rpx;
  color: #fff;
  background-color: yellowgreen;
  margin: 20rpx 0;
}
